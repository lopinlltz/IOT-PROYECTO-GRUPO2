<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserEditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="#5C1E67"
                android:orientation="horizontal">
                <!-- espacio para que en las vistas que lo requieran
                poner el chat-->
                <LinearLayout
                    android:layout_width="87dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <!-- toy agregando un atrás aki mejor para q
                    se vea menos vacio ga -->
                    <!--<ImageView
                        android:id="@+id/myImageAtras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/backpic" />-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="233dp"
                    android:layout_height="71dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewPerfilInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Mi Perfil"
                        android:textColor="@color/white"
                        android:textSize="27dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <!-- para icono de chat -->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="237dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="199dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/nanapic"
                        app:civ_border_color="#6A496C"
                        app:civ_border_width="10dp" />

                    <ImageButton
                        android:id="@+id/buttonChangePhoto"
                        android:layout_width="52dp"
                        android:layout_height="53dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/circular_button_background"
                        android:contentDescription="algouwu"
                        android:padding="12dp"
                        android:src="@drawable/addicon" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="236dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="@drawable/rounded_background"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nana Osaki"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.5"
                    android:background="@color/black" />

                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" /> #6E6E6E-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:background="@drawable/rounded_cell"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="136dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_intern_cell"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/dnipic" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:text="DNI"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="70123456" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:background="@drawable/rounded_cell"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="136dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_intern_cell"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/mailpic" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="Correo"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="alumnopucp123@gmail.com" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:background="@drawable/rounded_cell"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="136dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_intern_cell"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/phonepic" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="Teléfono"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/editTextPhone"
                                android:layout_width="219dp"
                                android:layout_height="41dp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="10dp"
                                android:hint="999111111"
                                android:paddingStart="10dp"
                                android:textSize="13.5dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:background="@drawable/rounded_cell"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="136dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_intern_cell"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/addresspic" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="77dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"

                                android:text="Domicilio"
                                android:textColor="@color/white"

                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/editTextDomicilio"
                                android:layout_width="200dp"
                                android:layout_margin="10dp"
                                android:paddingStart="10dp"
                                android:layout_height="30dp"
                                android:textSize="13.5dp"
                                android:hint="Av. Brasil 1234, Pueblo Libre"
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonActualizar"
                        android:layout_width="139dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/background_button_logout"
                        android:gravity="center"
                        android:text="Actualizar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17dp" />
                </LinearLayout>

                <!--android:gravity="center"-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="71dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonCancelarEdit"
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/background_button_logout"
                        android:gravity="center"
                        android:text="Cancelar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17dp" />

                </LinearLayout>
            </LinearLayout>


            <!--<androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView"
                android:name="com.example.proyecto_final_iot.MenuBarFragment"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout="@layout/menu_bar_fragment" />-->


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>