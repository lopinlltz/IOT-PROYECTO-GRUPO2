<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Administrador.Activity.Admin_nuevo_sitio"
        android:id="@+id/main"    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/list_morado_border"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevo Sitio"
                android:textAlignment="center"
                android:layout_marginTop="-5dp"
                android:textColor="@color/color_admin"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/id_codigodeSitio"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/list_morado_border"
                android:elegantTextHeight="false"
                android:gravity="start|center_vertical"
                android:hint="CÃ³digo o ID de Sitio"
                android:padding="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/color_admin"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/id_departamento"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/list_morado_border"
                android:gravity="start|center_vertical"
                android:hint="Departamento"
                android:padding="10dp"
                android:textColor="@color/color_admin"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/id_provincia"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/edittext_bkg"
                android:gravity="start|center_vertical"
                android:hint="Provincia"
                android:padding="10dp"
                android:textColor="@color/color_admin"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/id_distrito"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/edittext_bkg"
                android:gravity="start|center_vertical"
                android:hint="Distrito"
                android:padding="10dp"
                android:textColor="@color/color_admin"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/id_ubigeo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/edittext_bkg"
                android:gravity="start|center_vertical"
                android:hint="Ubigeo"
                android:padding="10dp"
                android:textColor="@color/color_admin"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/id_tipoDeZona"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/edittext_bkg"
                android:gravity="start|center_vertical"
                android:hint="Tipo de Zona (Urbana o Rural)"
                android:padding="10dp"
                android:textColor="@color/color_admin"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/id_tipoDeSitio"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/edittext_bkg"
                android:gravity="start|center_vertical"
                android:hint="Tipo de Sitio (Movil o Fijo)"
                android:padding="10dp"
                android:textColor="@color/color_admin"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/id_latitud_latitud"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/edittext_bkg"
                android:gravity="start|center_vertical"
                android:hint="Latitud"
                android:padding="10dp"
                android:textColor="@color/color_admin"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/id_latitud_long"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginTop="-50dp"
                android:layout_marginStart="160dp"
                android:background="@drawable/edittext_bkg"
                android:gravity="start|center_vertical"
                android:hint="Longitud"
                android:padding="10dp"
                android:textColor="@color/color_admin"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/Guardar_new_sitio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="-489dp"
                android:layout_marginHorizontal="265dp"
                app:srcCompat="@drawable/baseline_save_24_admin" />

            <FrameLayout
                android:id="@+id/map_admin"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="470dp"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
