<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#c0a0c3"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/layoutSitio"
        android:layout_width="6dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButtonSitio"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/sitepic" />

        <TextView
            android:id="@+id/textViewSitio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sitio"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTipo"
        android:layout_width="4dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButtonTipo"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/tipoequipopic" />

        <TextView
            android:id="@+id/textViewTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tipo"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEquipo"
        android:layout_width="13dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButtonEquipo"
            android:layout_width="104dp"
            android:layout_height="45dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/equipopic" />

        <TextView
            android:id="@+id/textViewEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/equipo"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutHistorial"
        android:layout_width="9dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButtonHistorial"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/historialpic" />

        <TextView
            android:id="@+id/textViewHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/historial"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
