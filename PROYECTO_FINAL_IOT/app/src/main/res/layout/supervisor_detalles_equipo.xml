<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Supervisor.Activity.SitioDetalleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/barra_superior"
            android:name="com.example.proyecto_final_iot.BarraSuperior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout="@layout/barra_superior" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNombreEquipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="Nombre de Equipo"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imagen_equipo_super"
                android:layout_width="157dp"
                android:layout_height="112dp"
                app:srcCompat="@drawable/routerimage" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="155dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView38"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sitio" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="155dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView39"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Número de serie" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="155dp"
                    android:layout_height="34dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Marca" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="155dp"
                    android:layout_height="34dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView41"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="Distrito"
                        android:text="Modelo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="155dp"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView42"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripción" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView43"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha de registro" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="209dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewSitio"
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:text="20191234" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewNroSerie"
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:text="123456789" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewMarca"
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:text="PUCP" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="37dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewModelo"
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:text="Telecom" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewDescripcion"
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:text="no hay ideas uwu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="33dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewFecha"
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:text="29/04/2024" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonVerQR"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Ver QR"
                android:onClick="verQR" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">
            </LinearLayout>

            <Button
                android:id="@+id/buttonReportes"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:onClick="Reportes"
                android:text="Reportes" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonEditarEq"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/background_button_logout"
                android:text="Editar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buttonBorrarEq"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button_logout"
                android:text="Borrar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView"
                android:name="com.example.proyecto_final_iot.MenuBarFragment"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal|bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout="@layout/menu_bar_fragment" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>